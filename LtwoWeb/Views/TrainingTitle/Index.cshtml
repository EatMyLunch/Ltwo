@model IEnumerable<TrainingTitle>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Syllabus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.TrainingType.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.TrainingType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Syllabus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.TrainingType.Department.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.TrainingType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TrainingTitleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TrainingTitleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TrainingTitleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
